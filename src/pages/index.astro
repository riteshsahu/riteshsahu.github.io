---
import Education from "@/components/Education.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Languages from "@/components/Languages.astro";
import Projects from "@/components/Projects.astro";
import Skills from "@/components/Skills.astro";
import VenoBoxAnimations from "@/components/VenoBoxAnimations.astro";
import "@/styles/main.scss";
import "@fontsource/lato";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/700.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Ritesh Sahu" />
    <meta name="designer" content="Ritesh Sahu" />
    <meta name="description" content="Webpage for Ritesh Sahu Portfolio" />
    <title>Ritesh Sahu | Developer</title>
  </head>
  <body>
    <div class="bg-gray-300 overflow-x-hidden">
      <Header />
      <main class="my-10 sm:mx-4 md:mx-8 lg:mx-12">
        <div class="flex flex-wrap -mt-8">
          <div class="w-full lg:w-2/3 sm:px-4 text-lg mt-8">
            <Skills />
            <Projects />
          </div>

          <div class="w-full lg:w-1/3 sm:px-4 mt-8">
            {/* <Info /> */}
            <Education />
            <Languages />
          </div>
        </div>
      </main>
      <Footer />
      <VenoBoxAnimations />
    </div>
  </body>
</html>
