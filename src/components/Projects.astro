---
import { projects } from "@/config/projects";
import { Image } from "astro:assets";
const { id, class: className } = Astro.props;
---

<section id={id} class:list={["pt-10 pb-16", className]}>
  <h1 class="section-heading">My projects</h1>
  <p
    class="pt-[15px] pb-[60px] text-[22px] text-[#777777] dark:text-[#b0aaa6] leading-[1.8] text-center"
  >
    A showcase of innovative solutions and successful implementations.
  </p>
  <div>
    {
      projects.map(
        ({
          title,
          featureImage,
          images,
          desc,
          techStack,
          link,
          githubLink,
